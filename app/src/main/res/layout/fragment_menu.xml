<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:background="#7b1fa2"
    android:orientation="vertical">

    <!-- Encabezado-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/logoblanco"
            android:layout_margin="10dp"
            android:id="@+id/logoblanco" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chkTime"
                android:id="@+id/chktime"
                android:textColor="#00bcd4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/logoblanco"
                android:layout_marginTop="10dp"
                android:textSize="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtitulo"
                android:layout_marginRight="15dp"
                android:textColor="#FFF"
                android:textSize="30px"
                android:layout_gravity="end"
                android:id="@+id/textView" />

        </LinearLayout>

    </LinearLayout>

    <!-- CONTENIDO-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="Elige un modo"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:id="@+id/texto"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/modo_diagnostico"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#00bcd4"
                android:layout_gravity="center"
                android:text="Modo Diagnostico"
                android:textColor="#FFF"
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/texto"
                android:layout_marginTop="50dp"/>

            <Button
                android:id="@+id/modo_intervencion"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#00bcd4"
                android:layout_gravity="center"
                android:text="Modo Intervencion"
                android:textColor="#FFF"
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/modo_diagnostico"
                android:layout_marginTop="25dp"/>

            <Button
                android:id="@+id/modo_choque"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#00bcd4"
                android:layout_gravity="center"
                android:text="Modo Choque"
                android:textColor="#FFF"
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/modo_intervencion"
                android:layout_marginTop="25dp"/>

            <Button
                android:id="@+id/ayuda"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#00bcd4"
                android:layout_gravity="center"
                android:text="Ayuda"
                android:textColor="#FFF"
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/modo_choque"
                android:layout_marginTop="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="end">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ATRAS"
                    android:id="@+id/atras"
                    android:background="#7b1fa2"
                    android:textColor="#ffffff"
                    android:layout_gravity="end"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BOTON ATRAS-->


</LinearLayout>
