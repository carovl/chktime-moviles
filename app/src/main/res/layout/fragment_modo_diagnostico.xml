<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carolina.chktime.Modo_diagnostico"
    android:background="#7b1fa2"
    android:orientation="vertical">

    <!-- Encabezado-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@mipmap/logoblanco"
            android:layout_margin="10dp"
            android:id="@+id/logoblanco" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chkTime"
                android:textSize="60dp"
                android:id="@+id/chktime"
                android:textColor="#00bcd4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/logoblanco"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtitulo"
                android:textColor="#FFF"
                android:textSize="30px"
                android:layout_marginRight="15dp"
                android:layout_gravity="end"
                android:id="@+id/textView" />

        </LinearLayout>

    </LinearLayout>

    <!-- CONTENIDO-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="Modo Diagnostico"
        android:textSize="30dp"
        android:layout_below="@+id/logoblanco"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/texto"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--IMAGENES  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:id="@+id/img1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:id="@+id/img2"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:id="@+id/img3"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:id="@+id/img4"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:id="@+id/img5"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:id="@+id/img6"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:id="@+id/img7"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="true" />
            </LinearLayout>

      </LinearLayout>

  </ScrollView>

    <!-- BOTON ATRAS-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ATRAS"
            android:id="@+id/atras"
            android:background="#7b1fa2"
            android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>

