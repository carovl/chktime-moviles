<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carolina.chktime.Modo_diagnostico"
    android:background="#7b1fa2"
    android:orientation="vertical">

    <!-- Encabezado-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logoblanco"
            android:layout_margin="10dp"
            android:id="@+id/logoblanco" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chkTime"
                android:id="@+id/chktime"
                android:textColor="#00bcd4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/logoblanco"
                android:layout_marginTop="10dp"
                android:textSize="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtitulo"
                android:textColor="#FFF"
                android:textSize="30px"
                android:layout_marginRight="15dp"
                android:layout_gravity="end"
                android:id="@+id/textView" />

        </LinearLayout>

    </LinearLayout>

    <!-- CONTENIDO-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="Modo Diagnostico"
        android:layout_below="@+id/logoblanco"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/texto"
        android:textSize="25dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--IMAGENES  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/l1"
                android:visibility="gone"
                android:layout_margin="4dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/img1"
                    android:clickable="false"
                    android:isScrollContainer="false"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:layout_margin="4dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ed1"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:layout_margin="4dp" />

                <Button
                    android:text="STOP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/s1"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_dark"
                    android:layout_margin="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/l2"
                android:layout_margin="4dp">
                <ImageView
                    android:layout_height="50dp"
                    android:id="@+id/img2"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="4dp"
                    android:layout_width="50dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ed2"

                    android:layout_weight="1"
                    android:background="@android:color/background_light" />

                <Button
                    android:text="STOP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/s2"
                    android:layout_weight="1"

                    android:background="@android:color/holo_blue_dark"
                    android:layout_margin="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:id="@+id/l3"
                android:visibility="gone"
                android:layout_margin="4dp">

                <ImageView
                    android:layout_height="50dp"
                    android:id="@+id/img3"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="4dp"
                    android:layout_width="50dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ed3"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:layout_margin="4dp" />

                <Button
                    android:text="STOP"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/s3"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_dark"
                    android:layout_margin="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/l4"
                android:visibility="gone"
                android:layout_margin="4dp">

                <ImageView
                    android:layout_height="50dp"
                    android:id="@+id/img4"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="4dp"
                    android:layout_width="50dp" />

                <EditText
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ed4"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:layout_margin="4dp" />

                <Button
                    android:text="STOP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/s4"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_dark"
                    android:layout_margin="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/l5"
                android:visibility="gone"
                android:layout_margin="4dp">

                <ImageView
                    android:layout_height="50dp"
                    android:id="@+id/img5"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="4dp"
                    android:layout_width="50dp" />

                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ed5"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:layout_margin="4dp" />

                <Button
                    android:text="STOP"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:id="@+id/s5"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_dark"
                    android:layout_margin="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/l6"
                android:visibility="gone"
                android:layout_margin="4dp">

                <ImageView
                    android:id="@+id/img6"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="4dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ed6"
                    android:layout_weight="1"

                    android:background="@android:color/background_light"
                    android:layout_margin="4dp" />

                <Button
                    android:text="STOP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/s6"
                    android:layout_weight="1"

                    android:background="@android:color/holo_blue_dark"
                    android:layout_margin="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/l7"
                android:visibility="gone"
                android:layout_margin="4dp">

                <ImageView
                    android:layout_height="50dp"
                    android:id="@+id/img7"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="4dp"
                    android:layout_width="50dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ed7"
                    android:layout_weight="1"

                    android:background="@android:color/background_light"
                    android:layout_margin="4dp" />

                <Button
                    android:text="STOP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/s7"
                    android:layout_weight="1"

                    android:background="@android:color/holo_blue_dark"
                    android:layout_margin="4dp" />
            </LinearLayout>

      </LinearLayout>

  </ScrollView>

    <!-- BOTON ATRAS-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ATRAS"
            android:id="@+id/atras"
            android:background="#7b1fa2"
            android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>

